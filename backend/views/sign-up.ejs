<html>

<head>
    <title>
        <%= title %>
    </title>
    <script src="/scripts/entry.js"></script>
    <link rel="stylesheet" href="/stylesheets/home.css" />
</head>

<body>
    <h1> Sign Up Page (unauthenticated)</h1>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/authentication/logout">Logout</a></li>
        <li><a href="/lobby">Lobby</a></li>
        <li><a href="/authentication/login">Login</a></li>
    </ul>
    <form method="post" action="/authentication/register">
        <label>
          <em>Username</em>
          <input name="username" autocomplete="username" placeholder="Username" />
        </label>
        <label>
          <em>Email</em>
          <input name="email" autocomplete="email" placeholder="Email address" />
        </label>
        <label>
          <em>Password</em>
          <input name="password" type="password" autocomplete="new-password" />
        </label>
        <label>
          <em>First name</em>
          <input name="firstname" autocomplete="firstname" placeholder="First Name" />
        </label>
        <label>
          <em>Last name</em>
          <input name="lastname" autocomplete="lastname" placeholder="Last Name" />
        </label>
        <input type="submit" value="Register" />
      </form>
</body>
