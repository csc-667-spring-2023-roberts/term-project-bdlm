<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/authenticated_nav.ejs') %>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <a
            href="/api/games/create"
            id="create-game-link"
            class="ms-btn ms-action"
            >Create Game</a
          >
          <ul id="game-list">
            <% for(let i = 0; i < games.length; i++) { %>
            <li>
              <a href="/api/games/<%= games[i].id %>/join"
                >Join <span><%= games[i].id %></span></a
              >
            </li>
            <% } %>
          </ul>
        </div>
        <div class="col-sm">
          <div id="chat-container">
            <div id="messages"></div>
            <label>
              <input
                id="chatMessage"
                name="chat-message"
                placeholder="Message..."
              />
            </label>
          </div>
        </div>
      </div>
    </div>

    <template id="available-game-item">
      <div>
        <li>
          <a href="#">Join <span>42</span></a>
        </li>
      </div>
    </template>
  </body>
</html>